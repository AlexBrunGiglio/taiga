{
    "name": "back",
    "version": "0.0.3",
    "description": "Nest backend for mono-project",
    "author": "Alexandre BRUN-GIGLIO",
    "private": true,
    "license": "UNLICENSED",
    "scripts": {
        "prebuild": "rimraf dist",
        "build": "nest build",
        "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
        "start": "concurrently \"nodemon --verbose\" \"npm run open-back-home\" ",
        "start:debug": "nest start --debug --watch",
        "start:prod": "node dist/main",
        "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "test:e2e": "jest --config ./test/jest-e2e.json",
        "nswag-generate-client": "ts-node --project ./swagger/tools.tsconfig.json ./swagger/nswag-generate-client.ts",
        "open-back-home": "wait-on http-get://localhost:3088/swagger && open-cli http://localhost:3088/swagger",
        "generate-jwt-secret": "node -e \"console.log(require('crypto').randomBytes(64).toString('base64'));\""
    },
    "dependencies": {
        "@nestjs-modules/mailer": "^1.6.1",
        "@nestjs/common": "^7.6.18",
        "@nestjs/core": "^7.6.18",
        "@nestjs/jwt": "^7.2.0",
        "@nestjs/passport": "^7.1.6",
        "@nestjs/platform-express": "^7.6.18",
        "@nestjs/platform-socket.io": "^8.4.4",
        "@nestjs/schedule": "^1.1.0",
        "@nestjs/swagger": "^4.8.2",
        "@nestjs/typeorm": "^7.1.5",
        "@nestjs/websockets": "^8.4.4",
        "bcrypt": "^5.0.1",
        "bcryptjs": "^2.4.3",
        "concurrently": "^6.5.1",
        "handlebars": "^4.7.7",
        "jsonwebtoken": "^8.5.1",
        "linqts": "^1.14.4",
        "mysql2": "^2.3.3",
        "nodemailer": "^6.7.3",
        "nodemon": "^2.0.15",
        "open-cli": "^7.0.1",
        "passport": "^0.4.1",
        "passport-jwt": "^4.0.0",
        "passport-local": "^1.0.0",
        "reflect-metadata": "^0.1.13",
        "rimraf": "^3.0.2",
        "rxjs": "^6.5.4",
        "swagger-ui-express": "^4.3.0",
        "typeorm": "^0.2.45",
        "typeorm-linq-repository": "^1.1.3",
        "wait-on": "^5.3.0"
    },
    "devDependencies": {
        "@nestjs/cli": "^7.0.0",
        "@nestjs/schematics": "^7.0.0",
        "@nestjs/testing": "^7.6.18",
        "@openapitools/openapi-generator-cli": "2.1.7",
        "@types/cron": "^1.7.3",
        "@types/express": "^4.17.13",
        "@types/jest": "26.0.10",
        "@types/multer": "^1.4.7",
        "@types/node": "^13.9.1",
        "@types/nodemailer": "^6.4.4",
        "@types/passport-jwt": "^3.0.6",
        "@types/passport-local": "^1.0.34",
        "@types/supertest": "^2.0.12",
        "@typescript-eslint/eslint-plugin": "3.9.1",
        "@typescript-eslint/parser": "3.9.1",
        "eslint": "7.7.0",
        "eslint-config-prettier": "^6.10.0",
        "eslint-plugin-import": "^2.26.0",
        "jest": "26.4.2",
        "prettier": "^1.19.1",
        "supertest": "^4.0.2",
        "ts-jest": "26.2.0",
        "ts-loader": "^6.2.1",
        "ts-node": "^9.1.1",
        "tsconfig-paths": "^3.14.1",
        "typescript": "^3.9.10"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "src",
        "testRegex": ".spec.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "coverageDirectory": "../coverage",
        "testEnvironment": "node"
    }
}